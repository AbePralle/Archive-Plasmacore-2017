  METHODS
    method abs->Int64
      if (this >= 0) return this
      else           return -this

    method real_bits->Real64
      $if ("C++")
        native "return *((RogueReal64*)&$this);"
      $endIf

    method clamped( &low=null:Int64?, &high=null:Int64? )->Int64
      if (low.exists and this < low.value)  return low.value
