module Plasmacore

augment System
  GLOBAL METHODS
    method is_desktop->Logical
      $if target("Desktop") return true
      $else                 return false

    method is_mobile->Logical
      $if target("Mobile") return true
      $else                return false

    method sync_storage
      native @|#ifdef EMSCRIPTEN
              |  Rogue_sync_local_storage();
              |#endif

endAugment

