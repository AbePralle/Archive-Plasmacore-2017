$using Plasmacore

println "Rogue Launched!"

local window = Window( "MainWindow", GreenBlue() )
window.show


class GreenBlue : ViewLogic
  PROPERTIES

  METHODS
    method on_init

    method on_draw
      Graphics.clear

    method on_update
      local p = Math.sin( (Time.current % 2)/2 * pi )
      Graphics.background_color = 0xff000000 | (p * 255)->Int32
endClass

