$module Plasmacore

class Window
  PROPERTIES
    name : String
    id   : Int32

  METHODS
    method init( name )
      id = Plasmacore.create_resource_id
      Message( "Window.create" ).set_int32("id",id).set_string("name",name).send

    method show
      Message( "Window.show" ).set_int32("id",id).send

endClass

